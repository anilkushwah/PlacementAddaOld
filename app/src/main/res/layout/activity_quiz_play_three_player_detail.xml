<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuizPlayThreePlayerDetail">

    <include layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--For Player One -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/firstPlayerIv"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/ic_user" />

                <TextView
                    android:id="@+id/firstPlayerNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="@string/name"
                    android:textColor="@color/primary_text"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/firstPlayerGenderTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="@string/gender"
                    android:visibility="gone"
                    android:textColor="@color/primary_text"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/firstPlayerCityTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="@string/city"

                    android:textColor="@color/primary_text"
                    android:textSize="12dp" />


            </LinearLayout>

            <!--For Player Two-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/secondPlayerIv"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/ic_user" />

                <TextView
                    android:id="@+id/secondPlayerNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="@string/name"

                    android:textColor="@color/primary_text"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/secondPlayerGenderTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="@string/gender"
                    android:visibility="gone"
                    android:textColor="@color/primary_text"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/secondPlayerCityTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="@string/city"
                    android:textColor="@color/primary_text"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

        <!--For Player three-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/thirdPlayerIv"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/ic_user" />

            <TextView
                android:id="@+id/thirdPlayerNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:text="@string/name"
                android:textColor="@color/primary_text"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/thirdPlayerGenderTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:text="@string/gender"
                android:visibility="gone"
                android:textColor="@color/primary_text"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/thirdPlayerCityTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:text="@string/city"
                android:textColor="@color/primary_text"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/quizLogoImageView"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        />
    </RelativeLayout>


    <TextView
        android:id="@+id/idsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
  <TextView
        android:id="@+id/idsthirdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

</RelativeLayout>