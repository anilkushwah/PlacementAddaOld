<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvClearId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_8sdp"
        android:text="Clear"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_normal" />

    <android.support.v7.widget.CardView
        android:id="@+id/categryLayoutCardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvClearId"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_4sdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvQuetionId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:text="Question"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_normal" />

                <RadioGroup
                    android:id="@+id/rgGroupId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbOption1Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option1" />

                    <RadioButton
                        android:id="@+id/rbOption2Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Option2" />

                    <RadioButton
                        android:id="@+id/rbOption3Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option3" />

                    <RadioButton
                        android:id="@+id/rbOption4Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option4" />

                    <RadioButton
                        android:id="@+id/rbOption5Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option5" />
                </RadioGroup>

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>